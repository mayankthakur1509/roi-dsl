{
  "agent_type": "roi_qualification_bot",
  "persona": {
    "name": "ROI Qualification Assistant",
    "role": "value_discovery",
    "tone": "professional_empathetic",
    "target_persona": {
      "role": "Sponsor",
      "description": "VP/EVP Clinical Operations"
    }
  },
  "goals": [
    {
      "goal_id": "SubmissionRisk",
      "description": "Avoid submission delays and regulatory exposure",
      "type": "pain_avoidance"
    },
    {
      "goal_id": "TimelineRecovery",
      "description": "Recover 2-8 weeks on delayed trials",
      "type": "value_gain"
    },
    {
      "goal_id": "VendorAlignment",
      "description": "Restore CRO accountability and performance",
      "type": "value_gain"
    },
    {
      "goal_id": "DelayCost",
      "description": "Prevent $2M+/month burn from operational drift",
      "type": "pain_avoidance"
    },
    {
      "goal_id": "DeviationReduction",
      "description": "Reduce protocol deviations 35%",
      "type": "value_gain"
    },
    {
      "goal_id": "ReworkPrevention",
      "description": "Avoid $2.4M+ in CRO rework costs",
      "type": "pain_avoidance"
    }
  ],
  "qualification_logic": {
    "questions": [
      {
        "metric": "VendorDrift",
        "question": "On a scale of 0-100, how would you rate your current VendorDrift?",
        "threshold": 0.45,
        "weight": 1.5
      },
      {
        "metric": "TimelineDelay",
        "question": "On a scale of 0-100, how would you rate your current TimelineDelay?",
        "threshold": 0.67,
        "weight": 1.0
      },
      {
        "metric": "DeviationRate",
        "question": "On a scale of 0-100, how would you rate your current DeviationRate?",
        "threshold": 0.38,
        "weight": 1.0
      },
      {
        "metric": "TMFReadiness",
        "question": "On a scale of 0-100, how would you rate your current TMFReadiness?",
        "threshold": 0.55,
        "weight": 1.0
      },
      {
        "metric": "MonitoringVariance",
        "question": "On a scale of 0-100, how would you rate your current MonitoringVariance?",
        "threshold": 0.52,
        "weight": 1.0
      },
      {
        "metric": "SubmissionExposure",
        "question": "On a scale of 0-100, how would you rate your current SubmissionExposure?",
        "threshold": 0.71,
        "weight": 1.0
      }
    ],
    "scoring": {
      "high_priority_threshold": 0.6,
      "medium_priority_threshold": 0.4,
      "low_priority_threshold": 0.2
    }
  },
  "conversation_flow": [
    {
      "step": 1,
      "type": "greeting",
      "message": "Hi! I help companies understand their ROI opportunities. Can I ask you a few quick questions?"
    },
    {
      "step": 2,
      "type": "pain_discovery",
      "message": "I noticed you're interested in Avoid submission delays and regulatory exposure. What's driving this need?"
    },
    {
      "step": 3,
      "type": "qualification",
      "message": "Let me ask a few diagnostic questions to understand your situation better..."
    },
    {
      "step": 4,
      "type": "metric_question",
      "metric": "VendorDrift",
      "message": "How would you describe your current VendorDrift?"
    },
    {
      "step": 5,
      "type": "metric_question",
      "metric": "TimelineDelay",
      "message": "How would you describe your current TimelineDelay?"
    },
    {
      "step": 6,
      "type": "metric_question",
      "metric": "DeviationRate",
      "message": "How would you describe your current DeviationRate?"
    },
    {
      "step": 7,
      "type": "metric_question",
      "metric": "TMFReadiness",
      "message": "How would you describe your current TMFReadiness?"
    },
    {
      "step": 8,
      "type": "metric_question",
      "metric": "MonitoringVariance",
      "message": "How would you describe your current MonitoringVariance?"
    },
    {
      "step": 9,
      "type": "metric_question",
      "metric": "SubmissionExposure",
      "message": "How would you describe your current SubmissionExposure?"
    },
    {
      "step": 10,
      "type": "recommendation",
      "message": "Based on your answers, I can see some opportunities. Would you like to schedule a detailed ROI assessment?"
    }
  ],
  "automation_rules": [
    {
      "trigger_id": "trigger_1",
      "condition": "VendorDrift > 0.40",
      "action": "escalate(\"vendor_accountability\")",
      "priority": "medium"
    },
    {
      "trigger_id": "trigger_2",
      "condition": "TimelineDelay > 0.60",
      "action": "alert(\"critical_path_intervention\")",
      "priority": "medium"
    },
    {
      "trigger_id": "trigger_3",
      "condition": "DeviationRate > 0.35",
      "action": "notify(\"protocol_training\")",
      "priority": "medium"
    },
    {
      "trigger_id": "trigger_4",
      "condition": "TMFReadiness < 0.60",
      "action": "escalate(\"submission_readiness\")",
      "priority": "medium"
    },
    {
      "trigger_id": "trigger_5",
      "condition": "SubmissionExposure > 0.65",
      "action": "alert(\"regulatory_risk\")",
      "priority": "medium"
    },
    {
      "trigger_id": "trigger_6",
      "condition": "MonitoringVariance > 0.50",
      "action": "escalate(\"cro_precision_audit\")",
      "priority": "medium"
    }
  ],
  "escalation_criteria": {
    "immediate_escalation": [
      {
        "condition": "VendorDrift > 0.40",
        "reason": "high_risk_detected"
      },
      {
        "condition": "TimelineDelay > 0.60",
        "reason": "high_risk_detected"
      },
      {
        "condition": "TimelineDelay > 0.6",
        "reason": "metric_threshold_exceeded"
      },
      {
        "condition": "SubmissionExposure > 0.6",
        "reason": "metric_threshold_exceeded"
      }
    ],
    "scheduled_followup": [],
    "nurture_sequence": []
  },
  "metrics_tracking": {
    "VendorDrift": 0.45,
    "TimelineDelay": 0.67,
    "DeviationRate": 0.38,
    "TMFReadiness": 0.55,
    "MonitoringVariance": 0.52,
    "SubmissionExposure": 0.71
  }
}